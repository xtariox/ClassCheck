<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClassCheck.Views.HomePage"
             Title="HomePage"
             >
    <!-- Couleur d'arrière-plan de la page -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Bouton Absence -->
            <Button Text="Absence"
        Command="{Binding NavigateToAbsenceCommand}" />
                <!-- Bouton Ajouter un étudiant -->
                <Button Text="Add Student"
                   
                    Command="{Binding NavigateToAddStudentCommand}" />

                <!-- Bouton Nouvelle leçon -->
                <Button Text="New Lesson"
                   
                    Command="{Binding NavigateToNewLessonCommand}" />

                <!-- Bouton Recherche -->
                <Button Text="Search"
                   
                    Command="{Binding NavigateToSearchCommand}" />

                <!-- Bouton Déconnexion -->
                <Button Text="Logout"
                   
                    Command="{Binding LogoutCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
